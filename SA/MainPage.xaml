<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:SA.Models"
             mc:Ignorable="d"
             x:Class="SA.MainPage"
             BackgroundColor="#4269C3">
            <!-- <ContentPage.Resources>
                <ResourceDictionary>
                    <converters:ImageConverter x:Key="ImageConverter" />
                </ResourceDictionary>
            </ContentPage.Resources> -->

    <!-- // Set a grid with heigt and width -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Place new controls here -->
        <!--GRID ROW 0-->
        <!-- <Image 
            Source="{Binding Icon_map-political, Converter={StaticResource ImageFileToImageSourceConverter}}" 
            Grid.Row="0" Grid.Column="0"
            /> -->
        <Label
            Text="Stemwijzer" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
            Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="5" TextColor="White"
        />
        <!--GRID ROW 1-->
        <Image 
            Source="/Images/cda.png"
            Grid.Row="1" Grid.Column="1"
            />
        <Image
            Source="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b0/CDA_logo.svg/1200px-CDA_logo.svg.png"
            Grid.Row="1" Grid.Column="3"
            />
        <!--GRID ROW 2-->
        <!-- Put a function to check off the checkbox is checked CheckedChanged=""  -->
        <Image 
            Source="https://upload.wikimedia.org/wikipedia/commons/thumb/4/42/GROENLINKS-LOGO-COMPACT-RGB_%281%29.png/1200px-GROENLINKS-LOGO-COMPACT-RGB_%281%29.png"
            Grid.Row="2" Grid.Column="1"
            />
        <Image 
            Source="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6f/PvdA_Logo_small.svg/1200px-PvdA_Logo_small.svg.png"
            Grid.Row="2" Grid.Column="3"
            />
        <!--GRID ROW 3-->
        <CheckBox
            Grid.Row="3" Grid.ColumnSpan="1" HorizontalOptions="Center" Color="White" CheckedChanged="OnCheck"
        />

        <Label 
            Text="Ik ben 16 jaar of ouder."
            HorizontalOptions="Center"  VerticalOptions="Center"
            Grid.Row="3"  Grid.ColumnSpan="3" Grid.Column="1" TextColor="White" 
            />

        <!--GRID ROW 4-->
        <Button
            Text="Start"  
            Grid.Column="2" Grid.Row="4"  Grid.ColumnSpan="1" BackgroundColor="#6CB419"
            CornerRadius="25"
            Clicked="Button_Clicked"
        />

    </Grid>
</ContentPage>



